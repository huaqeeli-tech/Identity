<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="800.0" prefWidth="1200.0" stylesheets="@../../css/appStyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SearchByMiltaryIdController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER_LEFT" nodeOrientation="RIGHT_TO_LEFT" prefHeight="45.0" prefWidth="200.0" styleClass="headlabel">
               <children>
                  <Label alignment="CENTER_RIGHT" contentDisplay="CENTER" prefHeight="40.0" prefWidth="140.0" styleClass="searchlabel" text="الرقم العسكري :" />
                  <Label fx:id="milataryid" contentDisplay="CENTER" layoutX="10.0" layoutY="13.0" prefHeight="40.0" prefWidth="350.0" styleClass="searchdatalabel" />
               </children>
               <VBox.margin>
                  <Insets right="5.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="50.0" nodeOrientation="RIGHT_TO_LEFT" prefHeight="45.0" prefWidth="200.0" styleClass="headlabel">
               <children>
                  <Label alignment="CENTER_RIGHT" contentDisplay="CENTER" prefHeight="40.0" prefWidth="140.0" styleClass="searchlabel" text="الاسم :" />
                  <Label fx:id="name" contentDisplay="CENTER" layoutX="10.0" layoutY="13.0" prefHeight="40.0" prefWidth="350.0" styleClass="searchdatalabel" />
               </children>
               <VBox.margin>
                  <Insets right="5.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="95.0" nodeOrientation="RIGHT_TO_LEFT" prefHeight="45.0" prefWidth="200.0" styleClass="headlabel">
               <children>
                  <Label alignment="CENTER_RIGHT" contentDisplay="CENTER" prefHeight="40.0" prefWidth="140.0" styleClass="searchlabel" text="الرتبة :" />
                  <Label fx:id="rank" contentDisplay="CENTER" layoutX="10.0" layoutY="13.0" prefHeight="40.0" prefWidth="350.0" styleClass="searchdatalabel" />
               </children>
               <VBox.margin>
                  <Insets right="5.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="140.0" nodeOrientation="RIGHT_TO_LEFT" prefHeight="45.0" prefWidth="200.0" styleClass="headlabel">
               <children>
                  <Label alignment="CENTER_RIGHT" contentDisplay="CENTER" prefHeight="40.0" prefWidth="140.0" styleClass="searchlabel" text="الوحدة :" />
                  <Label fx:id="unit" contentDisplay="CENTER" layoutX="10.0" layoutY="13.0" prefHeight="40.0" prefWidth="350.0" styleClass="searchdatalabel" />
               </children>
               <VBox.margin>
                  <Insets right="5.0" />
               </VBox.margin>
            </HBox>
            <TableView fx:id="searchTable" nodeOrientation="RIGHT_TO_LEFT" prefHeight="200.0" prefWidth="200.0" styleClass="appTable" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="squnce_col" prefWidth="75.0" text="تسلسل" />
                <TableColumn fx:id="corsname_col" minWidth="200.0" prefWidth="75.0" text="اسم الدورة" />
                  <TableColumn fx:id="coursnum_col" prefWidth="75.0" text="رقم الدورة" />
                  <TableColumn fx:id="coursplace_col" minWidth="200.0" prefWidth="75.0" text="مكان انعقادها" />
                  <TableColumn fx:id="coursDuration_col" prefWidth="75.0" text="مدتها" />
                  <TableColumn fx:id="startdate_col" prefWidth="75.0" text="تاريخ بدايتها" />
                  <TableColumn fx:id="enddate_col" prefWidth="75.0" text="تاريخ نهايتها" />
                  <TableColumn fx:id="estimate_col" prefWidth="75.0" text="التقدير" />
                  <TableColumn fx:id="image_col" prefWidth="75.0" text="صورة الشهادة" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER" prefHeight="66.0" prefWidth="1200.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#printData" prefHeight="40.0" prefWidth="150.0" styleClass="toolBarButton">
                     <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../images/printer.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <HBox.margin>
                        <Insets left="2.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#getExcelSheet" prefHeight="40.0" prefWidth="150.0" styleClass="toolBarButton">
                     <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../images/Excel.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <HBox.margin>
                        <Insets left="2.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
